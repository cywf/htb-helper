---
import Layout from '../layouts/Layout.astro';

const issueTypes = [
  {
    name: 'Bug Report',
    description: 'Report a bug or unexpected behavior',
    icon: 'üêõ',
    url: 'https://github.com/cywf/htb-helper/issues/new?labels=bug&template=bug_report.md',
    color: 'error',
  },
  {
    name: 'Feature Request',
    description: 'Suggest a new feature or enhancement',
    icon: '‚ú®',
    url: 'https://github.com/cywf/htb-helper/issues/new?labels=enhancement&template=feature_request.md',
    color: 'success',
  },
  {
    name: 'Documentation',
    description: 'Improve or report issues with documentation',
    icon: 'üìö',
    url: 'https://github.com/cywf/htb-helper/issues/new?labels=documentation&template=documentation.md',
    color: 'info',
  },
  {
    name: 'Question',
    description: 'Ask a question about the project',
    icon: '‚ùì',
    url: 'https://github.com/cywf/htb-helper/issues/new?labels=question',
    color: 'warning',
  },
];
---

<Layout title="Create Issue" description="Report bugs, request features, or ask questions">
  <div class="space-y-6">
    <div>
      <h1 class="text-4xl font-bold mb-4">Create Issue</h1>
      <p class="text-lg opacity-80">
        Help us improve HTB Helper by reporting bugs, suggesting features, or asking questions.
      </p>
    </div>

    <!-- Issue Type Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {issueTypes.map((type) => (
        <a
          href={type.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`card bg-base-200 shadow-md hover:shadow-xl hover:bg-base-300 transition-all border-l-4 border-${type.color}`}
        >
          <div class="card-body">
            <h2 class="card-title text-2xl">
              <span class="text-3xl mr-2">{type.icon}</span>
              {type.name}
            </h2>
            <p class="opacity-80">{type.description}</p>
            <div class="card-actions justify-end mt-4">
              <span class={`btn btn-${type.color} btn-sm`}>
                Create {type.name}
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- General Issue Link -->
    <div class="card bg-gradient-to-r from-base-200 to-base-300 shadow-md">
      <div class="card-body text-center">
        <h3 class="text-xl font-bold mb-2">Not sure which type?</h3>
        <p class="mb-4 opacity-80">Use the template chooser on GitHub to select the right template</p>
        <div class="card-actions justify-center">
          <a
            href="https://github.com/cywf/htb-helper/issues/new/choose"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            Choose Issue Template
          </a>
        </div>
      </div>
    </div>

    <!-- Guidelines -->
    <div class="card bg-base-200 shadow-md">
      <div class="card-body">
        <h3 class="card-title">Issue Guidelines</h3>
        <ul class="list-disc list-inside space-y-2 opacity-80">
          <li>Search existing issues before creating a new one to avoid duplicates</li>
          <li>Provide as much detail as possible to help us understand and resolve the issue</li>
          <li>For bugs, include steps to reproduce, expected behavior, and actual behavior</li>
          <li>For features, explain the use case and how it would benefit the project</li>
          <li>Be respectful and constructive in your communication</li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
